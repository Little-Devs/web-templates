---
interface NavItem {
  label: string;
  href: string;
  hasDropdown?: boolean;
}

const navItems: NavItem[] = [
  { label: 'Platform', href: '#platform', hasDropdown: true },
  { label: 'Solutions', href: '#solutions', hasDropdown: true },
  { label: 'Resources', href: '#resources', hasDropdown: true },
  { label: 'Open Source', href: '#open-source', hasDropdown: true },
  { label: 'Enterprise', href: '#enterprise', hasDropdown: true },
  { label: 'Pricing', href: '#pricing' },
];
---

<header class="header" id="header">
  <nav class="header-nav" aria-label="Main navigation">
    <div class="header-content">
      <!-- Logo -->
      <a href="/" class="header-logo" aria-label="DevHub Home">
        <svg viewBox="0 0 32 32" width="32" height="32" aria-hidden="true">
          <rect width="32" height="32" rx="6" fill="currentColor" opacity="0.15"/>
          <path d="M12 10l-6 6 6 6M20 10l6 6-6 6" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" fill="none"/>
        </svg>
      </a>

      <!-- Desktop Navigation -->
      <ul class="header-menu" role="menubar">
        {navItems.map((item) => (
          <li class="header-menu-item" role="none">
            <a 
              href={item.href} 
              class="header-menu-link"
              role="menuitem"
            >
              {item.label}
              {item.hasDropdown && (
                <svg class="dropdown-icon" viewBox="0 0 16 16" width="12" height="12" fill="currentColor" aria-hidden="true">
                  <path d="M4.427 7.427l3.396 3.396a.25.25 0 00.354 0l3.396-3.396A.25.25 0 0011.396 7H4.604a.25.25 0 00-.177.427z"/>
                </svg>
              )}
            </a>
          </li>
        ))}
      </ul>

      <!-- Right Section -->
      <div class="header-actions">
        <!-- Search -->
        <button class="header-search" aria-label="Search">
          <svg viewBox="0 0 16 16" width="16" height="16" fill="currentColor" aria-hidden="true">
            <path d="M10.68 11.74a6 6 0 01-7.922-8.982 6 6 0 018.982 7.922l3.04 3.04a.749.749 0 01-.326 1.275.749.749 0 01-.734-.215l-3.04-3.04zM11.5 7a4.499 4.499 0 10-8.997 0A4.499 4.499 0 0011.5 7z"/>
          </svg>
          <span class="search-text">Search or jump to...</span>
          <span class="search-shortcut">/</span>
        </button>

        <!-- Divider -->
        <span class="header-divider" aria-hidden="true"></span>

        <!-- Auth -->
        <a href="#sign-in" class="header-signin">Sign in</a>
        <a href="#sign-up" class="btn btn-secondary header-signup">Sign up</a>
      </div>

      <!-- Mobile Menu Button -->
      <button class="header-mobile-toggle" aria-label="Toggle menu" aria-expanded="false" aria-controls="mobile-menu">
        <svg class="menu-icon" viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
          <path d="M3 12h18M3 6h18M3 18h18"/>
        </svg>
        <svg class="close-icon" viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
          <path d="M18 6L6 18M6 6l12 12"/>
        </svg>
      </button>
    </div>
  </nav>

  <!-- Mobile Menu -->
  <div class="mobile-menu" id="mobile-menu" aria-hidden="true">
    <ul class="mobile-menu-list">
      {navItems.map((item) => (
        <li>
          <a href={item.href} class="mobile-menu-link">{item.label}</a>
        </li>
      ))}
    </ul>
    <div class="mobile-menu-auth">
      <a href="#sign-in" class="btn btn-secondary mobile-auth-btn">Sign in</a>
      <a href="#sign-up" class="btn btn-primary mobile-auth-btn">Sign up</a>
    </div>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: var(--z-sticky);
    background-color: rgba(13, 17, 23, 0.8);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--color-border-subtle);
  }

  .header-nav {
    max-width: var(--container-2xl);
    margin-inline: auto;
  }

  .header-content {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    padding: var(--space-4);
    height: 64px;
  }

  .header-logo {
    color: var(--color-fg-default);
    transition: color var(--transition-fast);
    flex-shrink: 0;
  }

  .header-logo:hover {
    color: var(--color-fg-muted);
  }

  /* Desktop Menu */
  .header-menu {
    display: none;
    list-style: none;
    gap: var(--space-1);
    margin: 0;
    padding: 0;
  }

  @media (min-width: 1024px) {
    .header-menu {
      display: flex;
    }
  }

  .header-menu-link {
    display: flex;
    align-items: center;
    gap: var(--space-1);
    padding: var(--space-2) var(--space-3);
    color: var(--color-fg-default);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    border-radius: var(--radius-md);
    transition: background-color var(--transition-fast);
  }

  .header-menu-link:hover {
    background-color: var(--color-canvas-subtle);
    color: var(--color-fg-default);
  }

  .dropdown-icon {
    opacity: 0.7;
  }

  /* Actions */
  .header-actions {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    margin-left: auto;
  }

  .header-search {
    display: none;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-3);
    background-color: var(--color-canvas-subtle);
    border: 1px solid var(--color-border-default);
    border-radius: var(--radius-md);
    color: var(--color-fg-subtle);
    font-size: var(--font-size-sm);
    cursor: pointer;
    transition: border-color var(--transition-fast);
    min-width: 240px;
  }

  @media (min-width: 768px) {
    .header-search {
      display: flex;
    }
  }

  .header-search:hover {
    border-color: var(--color-border-muted);
  }

  .search-text {
    flex: 1;
    text-align: left;
  }

  .search-shortcut {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
    background-color: var(--color-canvas-default);
    border: 1px solid var(--color-border-default);
    border-radius: var(--radius-sm);
    font-size: var(--font-size-xs);
    color: var(--color-fg-muted);
  }

  .header-divider {
    display: none;
    width: 1px;
    height: 24px;
    background-color: var(--color-border-default);
  }

  @media (min-width: 768px) {
    .header-divider {
      display: block;
    }
  }

  .header-signin {
    display: none;
    color: var(--color-fg-default);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    padding: var(--space-2) var(--space-3);
    border-radius: var(--radius-md);
    transition: background-color var(--transition-fast);
  }

  @media (min-width: 768px) {
    .header-signin {
      display: block;
    }
  }

  .header-signin:hover {
    background-color: var(--color-canvas-subtle);
    color: var(--color-fg-default);
  }

  .header-signup {
    display: none;
    padding: var(--space-2) var(--space-4);
    font-size: var(--font-size-sm);
  }

  @media (min-width: 768px) {
    .header-signup {
      display: inline-flex;
    }
  }

  /* Mobile Toggle */
  .header-mobile-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: transparent;
    border: none;
    color: var(--color-fg-default);
    cursor: pointer;
    border-radius: var(--radius-md);
  }

  @media (min-width: 1024px) {
    .header-mobile-toggle {
      display: none;
    }
  }

  .header-mobile-toggle:hover {
    background-color: var(--color-canvas-subtle);
  }

  .header-mobile-toggle .close-icon {
    display: none;
  }

  .header-mobile-toggle[aria-expanded="true"] .menu-icon {
    display: none;
  }

  .header-mobile-toggle[aria-expanded="true"] .close-icon {
    display: block;
  }

  /* Mobile Menu */
  .mobile-menu {
    display: none;
    position: absolute;
    top: 64px;
    left: 0;
    right: 0;
    background-color: var(--color-canvas-default);
    border-bottom: 1px solid var(--color-border-default);
    padding: var(--space-4);
    max-height: calc(100vh - 64px);
    overflow-y: auto;
  }

  .mobile-menu.open {
    display: block;
  }

  @media (min-width: 1024px) {
    .mobile-menu {
      display: none !important;
    }
  }

  .mobile-menu-list {
    list-style: none;
    padding: 0;
    margin: 0 0 var(--space-4) 0;
  }

  .mobile-menu-link {
    display: block;
    padding: var(--space-3) var(--space-4);
    color: var(--color-fg-default);
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-medium);
    border-radius: var(--radius-md);
    transition: background-color var(--transition-fast);
  }

  .mobile-menu-link:hover {
    background-color: var(--color-canvas-subtle);
    color: var(--color-fg-default);
  }

  .mobile-menu-auth {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    padding-top: var(--space-4);
    border-top: 1px solid var(--color-border-default);
  }

  .mobile-auth-btn {
    width: 100%;
    justify-content: center;
  }
</style>

<script>
  const mobileToggle = document.querySelector('.header-mobile-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileToggle?.addEventListener('click', () => {
    const isExpanded = mobileToggle.getAttribute('aria-expanded') === 'true';
    mobileToggle.setAttribute('aria-expanded', (!isExpanded).toString());
    mobileMenu?.classList.toggle('open');
    mobileMenu?.setAttribute('aria-hidden', isExpanded.toString());
  });

  // Close menu when clicking a link
  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileToggle?.setAttribute('aria-expanded', 'false');
      mobileMenu.classList.remove('open');
      mobileMenu.setAttribute('aria-hidden', 'true');
    });
  });
</script>
