---
interface FooterColumn {
  title: string;
  links: { label: string; href: string }[];
}

const columns: FooterColumn[] = [
  {
    title: 'Product',
    links: [
      { label: 'Features', href: '#features' },
      { label: 'Security', href: '#security' },
      { label: 'Enterprise', href: '#enterprise' },
      { label: 'Customer Stories', href: '#stories' },
      { label: 'Pricing', href: '#pricing' },
      { label: 'Resources', href: '#resources' }
    ]
  },
  {
    title: 'Platform',
    links: [
      { label: 'Developer API', href: '#api' },
      { label: 'Partners', href: '#partners' },
      { label: 'Integrations', href: '#integrations' },
      { label: 'Documentation', href: '#docs' },
      { label: 'Status', href: '#status' }
    ]
  },
  {
    title: 'Support',
    links: [
      { label: 'Help Center', href: '#help' },
      { label: 'Community Forum', href: '#community' },
      { label: 'Contact Us', href: '#contact' },
      { label: 'Training', href: '#training' }
    ]
  },
  {
    title: 'Company',
    links: [
      { label: 'About', href: '#about' },
      { label: 'Blog', href: '#blog' },
      { label: 'Careers', href: '#careers' },
      { label: 'Press', href: '#press' }
    ]
  }
];

const socialLinks = [
  { label: 'Twitter', href: '#twitter', icon: 'twitter' },
  { label: 'GitHub', href: '#github', icon: 'github' },
  { label: 'LinkedIn', href: '#linkedin', icon: 'linkedin' },
  { label: 'YouTube', href: '#youtube', icon: 'youtube' }
];

const legalLinks = [
  { label: 'Terms', href: '#terms' },
  { label: 'Privacy', href: '#privacy' },
  { label: 'Cookies', href: '#cookies' },
  { label: 'Sitemap', href: '#sitemap' }
];
---

<footer class="footer">
  <div class="container">
    <!-- Main Footer -->
    <div class="footer-main">
      <!-- Brand -->
      <div class="footer-brand">
        <a href="/" class="footer-logo" aria-label="DevHub Home">
          <svg viewBox="0 0 32 32" width="32" height="32" aria-hidden="true">
            <rect width="32" height="32" rx="6" fill="currentColor" opacity="0.15"/>
            <path d="M12 10l-6 6 6 6M20 10l6 6-6 6" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" fill="none"/>
          </svg>
        </a>

        <!-- Social Links -->
        <div class="footer-social">
          {socialLinks.map((social) => (
            <a href={social.href} class="social-link" aria-label={social.label}>
              {social.icon === 'twitter' && (
                <svg viewBox="0 0 24 24" width="20" height="20" fill="currentColor">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              )}
              {social.icon === 'github' && (
                <svg viewBox="0 0 24 24" width="20" height="20" fill="currentColor">
                  <path d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.17 6.839 9.49.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.603-3.369-1.341-3.369-1.341-.454-1.155-1.11-1.462-1.11-1.462-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.831.092-.646.35-1.086.636-1.336-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.578 9.578 0 0112 6.836c.85.004 1.705.114 2.504.336 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.167 22 16.418 22 12c0-5.523-4.477-10-10-10z"/>
                </svg>
              )}
              {social.icon === 'linkedin' && (
                <svg viewBox="0 0 24 24" width="20" height="20" fill="currentColor">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              )}
              {social.icon === 'youtube' && (
                <svg viewBox="0 0 24 24" width="20" height="20" fill="currentColor">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>

      <!-- Link Columns -->
      <div class="footer-columns">
        {columns.map((column) => (
          <div class="footer-column">
            <h3 class="column-title">{column.title}</h3>
            <ul class="column-links">
              {column.links.map((link) => (
                <li>
                  <a href={link.href} class="column-link">{link.label}</a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>

    <!-- Bottom Footer -->
    <div class="footer-bottom">
      <p class="copyright">
        Â© {new Date().getFullYear()} DevHub, Inc. All rights reserved.
      </p>
      <nav class="footer-legal" aria-label="Legal">
        {legalLinks.map((link) => (
          <a href={link.href} class="legal-link">{link.label}</a>
        ))}
      </nav>
    </div>

    <!-- Back to Top -->
    <a href="#hero" class="back-to-top" aria-label="Back to top">
      <svg viewBox="0 0 16 16" width="16" height="16" fill="currentColor" aria-hidden="true">
        <path d="M3.22 9.78a.75.75 0 010-1.06l4.25-4.25a.75.75 0 011.06 0l4.25 4.25a.751.751 0 01-.018 1.042.751.751 0 01-1.042.018L8 6.06 4.28 9.78a.75.75 0 01-1.06 0z"/>
      </svg>
    </a>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-canvas-inset);
    border-top: 1px solid var(--color-border-default);
    padding-block: var(--space-16);
  }

  .footer-main {
    display: grid;
    gap: var(--space-12);
    margin-bottom: var(--space-12);
  }

  @media (min-width: 768px) {
    .footer-main {
      grid-template-columns: 1fr 3fr;
    }
  }

  /* Brand */
  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .footer-logo {
    color: var(--color-fg-muted);
    transition: color var(--transition-fast);
  }

  .footer-logo:hover {
    color: var(--color-fg-default);
  }

  .footer-social {
    display: flex;
    gap: var(--space-4);
  }

  .social-link {
    color: var(--color-fg-muted);
    transition: color var(--transition-fast);
  }

  .social-link:hover {
    color: var(--color-fg-default);
  }

  /* Columns */
  .footer-columns {
    display: grid;
    gap: var(--space-8);
    grid-template-columns: repeat(2, 1fr);
  }

  @media (min-width: 768px) {
    .footer-columns {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .column-title {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    color: var(--color-fg-default);
    margin-bottom: var(--space-4);
  }

  .column-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .column-link {
    font-size: var(--font-size-sm);
    color: var(--color-fg-muted);
    transition: color var(--transition-fast);
  }

  .column-link:hover {
    color: var(--color-link);
  }

  /* Bottom */
  .footer-bottom {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    padding-top: var(--space-8);
    border-top: 1px solid var(--color-border-muted);
  }

  @media (min-width: 768px) {
    .footer-bottom {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }
  }

  .copyright {
    font-size: var(--font-size-sm);
    color: var(--color-fg-muted);
  }

  .footer-legal {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-4);
  }

  .legal-link {
    font-size: var(--font-size-sm);
    color: var(--color-fg-muted);
    transition: color var(--transition-fast);
  }

  .legal-link:hover {
    color: var(--color-link);
  }

  /* Back to Top */
  .back-to-top {
    position: fixed;
    bottom: var(--space-8);
    right: var(--space-8);
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background-color: var(--color-canvas-subtle);
    border: 1px solid var(--color-border-default);
    border-radius: var(--radius-full);
    color: var(--color-fg-muted);
    transition: all var(--transition-base);
    opacity: 0;
    visibility: hidden;
    z-index: var(--z-sticky);
  }

  .back-to-top:hover {
    background-color: var(--color-canvas-default);
    color: var(--color-fg-default);
    border-color: var(--color-fg-muted);
  }

  .back-to-top.visible {
    opacity: 1;
    visibility: visible;
  }
</style>

<script>
  const backToTop = document.querySelector('.back-to-top');
  
  window.addEventListener('scroll', () => {
    if (window.scrollY > 500) {
      backToTop?.classList.add('visible');
    } else {
      backToTop?.classList.remove('visible');
    }
  });
</script>
